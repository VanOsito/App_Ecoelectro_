<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App.Views.Registrarse"
             Title="">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <!-- Título -->
            <Label Text="Crear Cuenta"
                   FontSize="22"
                   HorizontalOptions="Center"
                   FontAttributes="Bold"
                   TextColor="#333"/>

            <Label Text="Únete a Ecolectro y empieza a reciclar de forma inteligente."
                   FontSize="14"
                   TextColor="#666"
                   HorizontalOptions="Center"
                   HorizontalTextAlignment="Center"
                   Margin="0,0,0,20"/>

            <!-- Nombre Completo -->
            <Label Text="Nombre Completo"
                   FontSize="14"
                   TextColor="#333"/>
            <Entry Placeholder="Tu nombre completo"
                   HeightRequest="45"
                   BackgroundColor="#F5F5F5"
                   TextColor="Black"/>

            <!-- Correo -->
            <Label Text="Correo Electrónico"
                   FontSize="14"
                   TextColor="#333"/>
            <Entry Placeholder="email@ejemplo.com"
                   HeightRequest="45"
                   BackgroundColor="#F5F5F5"
                   Keyboard="Email"
                   TextColor="Black"/>

            <!-- Contraseña -->
            <Label Text="Contraseña"
                   FontSize="14"
                   TextColor="#333"/>
            <Entry Placeholder="Introduce tu contraseña"
                   IsPassword="True"
                   HeightRequest="45"
                   BackgroundColor="#F5F5F5"
                   TextColor="Black"/>

            <!-- Región -->
            <Picker
                x:Name="pickerRegion"
                ItemsSource="{Binding ListaRegiones}"
                ItemDisplayBinding="{Binding Nombre}"
                Title="Selecciona una Región" 
                BackgroundColor="#F5F5F5"
                TextColor="Black"
                SelectedIndexChanged="pickerRegion_SelectedIndexChanged"/>

            <Picker x:Name="pickerComuna" Title="Comuna"
                    BackgroundColor="#F5F5F5"
                    TextColor="Black"/>

            <!-- Checkbox Términos -->
            <HorizontalStackLayout>
                <CheckBox Color="Green"/>
                <Label Text="Acepto los "
                       TextColor="Black"/>
                <Label Text="Términos y Condiciones"
                       TextColor="Green"
                       FontAttributes="Bold"/>
            </HorizontalStackLayout>

            <!-- Botón Registrarse -->
            <Button Text="Registrarse"
                    HeightRequest="50"
                    BackgroundColor="Green"
                    TextColor="White"
                    FontAttributes="Bold"
                    CornerRadius="8"
                    Margin="0,20,0,0"/>

            <!-- Link Iniciar Sesión -->
            <HorizontalStackLayout HorizontalOptions="Center">
                <Label Text="¿Ya tienes una cuenta?"
                       TextColor="Black"/>
                <Label Text=" Iniciar Sesión"
                       TextColor="Green"
                       FontAttributes="Bold">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnLoginTapped" />
                    </Label.GestureRecognizers>
                </Label>
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>