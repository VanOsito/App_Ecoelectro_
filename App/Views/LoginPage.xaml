<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App.Views.LoginPage"
             Title=""
             BackgroundColor="#F5F5F5">

    <Grid Padding="30" RowDefinitions="*,Auto,Auto,*,Auto">

        <!-- Título -->
        <Image Source="logo.png"
               HeightRequest="200"
               WidthRequest="190"
               HorizontalOptions="Center"
               VerticalOptions="Start"
               Grid.Row="0"/>
        
        <Label Text="Bienvenido"
               FontSize="28"
               FontFamily="OpenSans-Regular"
               HorizontalOptions="Center"
               VerticalOptions="End"
               Grid.Row="0"
               FontAttributes="Bold"
               TextColor="#333" />

        <Entry x:Name="txtUsuario"
               Placeholder="Usuario"
               Grid.Row="1"
               Margin="0,20,0,10"
               HeightRequest="45"
               BackgroundColor="White"
               TextColor="Black"
               PlaceholderColor="#999"
               Keyboard="Text" />

        <Entry x:Name="txtPassword"
               Placeholder="Contraseña"
               IsPassword="True"
               Grid.Row="2"
               HeightRequest="45"
               BackgroundColor="White"
               TextColor="Black"
               PlaceholderColor="#999"
               Keyboard="Text" />

        <!-- Botón Ingresar -->
        <Button Text="Ingresar"
                Grid.Row="3"
                Margin="0,30,0,0"
                HeightRequest="50"
                BackgroundColor="#7F4A9B"
                TextColor="White"
                FontAttributes="Bold"
                CornerRadius="12"
                Clicked="OnLoginClicked" />

        <!-- Versión / Footer -->
        <Label Text="versión 1.0.0"
               Grid.Row="4"
               HorizontalOptions="End"
               VerticalOptions="End"
               FontSize="12"
               TextColor="#888" />
    </Grid>
</ContentPage>
