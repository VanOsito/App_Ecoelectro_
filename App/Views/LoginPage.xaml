<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App.Views.LoginPage"
             Title=""
             BackgroundColor="#F5F5F5">

    <ScrollView>
        <VerticalStackLayout Padding="15" Spacing="35">
            

            <!-- Logo -->
            <Image Source="logo.png"
                   HeightRequest="210"
                   WidthRequest="210"
                   HorizontalOptions="Center" />

            <!-- Título -->
            <Label Text="Bienvenido"
                   FontSize="30"
                   FontFamily="OpenSans-Regular"
                   FontAttributes="Bold"
                   TextColor="#333"
                   HorizontalOptions="Center" />

            <!-- Campos -->
            <Entry x:Name="txtUsuario"
                   Placeholder="Usuario"
                   HeightRequest="45"
                   BackgroundColor="White"
                   TextColor="Black"
                   PlaceholderColor="#999"
                   Keyboard="Text"
                   Margin="0,10,0,0" />

            <Entry x:Name="txtPassword"
                   Placeholder="Contraseña"
                   IsPassword="True"
                   HeightRequest="45"
                   BackgroundColor="White"
                   TextColor="Black"
                   PlaceholderColor="#999"
                   Keyboard="Text" />

            <!-- Botón Ingresar -->
            <Button Text="Ingresar"
                    BackgroundColor="#7F4A9B"
                    TextColor="White"
                    FontAttributes="Bold"
                    CornerRadius="12"
                    HeightRequest="50"
                    Clicked="OnLoginClicked" />

            <!-- Botón Registrarse -->
            <Button Text="Registrarse"
                    BackgroundColor="#B388FF"
                    TextColor="White"
                    FontAttributes="Bold"
                    CornerRadius="12"
                    HeightRequest="50"
                    Clicked="Registrarse" />

            <!-- Footer -->
            <Label Text="versión 1.0.0"
                   FontSize="12"
                   TextColor="#888"
                   Opacity="0.6"
                   HorizontalOptions="Center"
                   Margin="0,15,0,0" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>

