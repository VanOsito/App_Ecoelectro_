<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:maps="clr-namespace:Microsoft.Maui.Controls.Maps;assembly=Microsoft.Maui.Controls.Maps"
             xmlns:converters="clr-namespace:App.Converters"
             xmlns:models="clr-namespace:App.Models"
             x:Class="App.Views.MapaPage"
             Title=""
             BackgroundColor="#F8F9FA">
    <ContentPage.Resources>
        <converters:ResiduoColorConverter x:Key="ResiduoColorConverter" />
    </ContentPage.Resources>

    <Grid RowDefinitions="120,*,90" 
          Padding="0"
          RowSpacing="0">

        <!-- Header Elegante  -->
        <Border Grid.Row="0"
                BackgroundColor="#FFFFFF"
                Stroke="#E0E0E0"
                Padding="15,8"
                Margin="0">

            <Border.Shadow>
                <Shadow Brush="#000000"
                        Offset="0,4"
                        Opacity="0.1"
                        Radius="8"/>
            </Border.Shadow>

            <Grid RowDefinitions="Auto,Auto" 
                  RowSpacing="6">

                <!-- TÃ­tulo y Contador -->
                <Grid Grid.Row="0"
                      ColumnDefinitions="*,Auto"
                      VerticalOptions="Center">

                    <Label Grid.Column="0"
                           Text="Puntos de Reciclaje"
                           FontSize="18"
                           TextColor="#2D3748"
                           FontAttributes="Bold"
                           VerticalOptions="Center" />

                    <Border Grid.Column="1"
                            BackgroundColor="#805AD5"
                            StrokeThickness="0"
                            Padding="8,4"
                            HorizontalOptions="End">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="6"/>
                        </Border.StrokeShape>
                        <Label x:Name="LblContador"
                               Text="0 puntos"
                               FontSize="11"
                               TextColor="#FFFFFF"
                               FontAttributes="Bold"
                               HorizontalOptions="Center"
                               VerticalOptions="Center" />
                    </Border>
                </Grid>

                <!-- Fila de botones: Rango y Filtro -->
                <Grid Grid.Row="1"
                      ColumnDefinitions="*,*"
                      ColumnSpacing="8"
                      VerticalOptions="Center">

                    <!-- BotÃ³n de Rango COMPACTO -->
                    <Border Grid.Column="0"
                            BackgroundColor="#38A169"
                            StrokeThickness="0"
                            Padding="8,5"
                            HeightRequest="32">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="6"/>
                        </Border.StrokeShape>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnRangoClicked"/>
                        </Border.GestureRecognizers>

                        <Grid ColumnDefinitions="Auto,*" 
                              VerticalOptions="Center"
                              ColumnSpacing="4">
                            <Label Grid.Column="1"
                                   Text="10 km"
                                   x:Name="LblRangoActual"
                                   FontSize="11"
                                   TextColor="#FFFFFF"
                                   FontAttributes="Bold"
                                   VerticalOptions="Center"
                                   HorizontalOptions="Center"
                                   LineBreakMode="NoWrap" />
                        </Grid>
                    </Border>

                    <!-- BotÃ³n de filtro COMPACTO -->
                    <Border Grid.Column="1"
                            BackgroundColor="#805AD5"
                            StrokeThickness="0"
                            Padding="8,5"
                            HeightRequest="32">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="6"/>
                        </Border.StrokeShape>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnFiltroClicked"/>
                        </Border.GestureRecognizers>

                        <Grid ColumnDefinitions="Auto,*,Auto" 
                              VerticalOptions="Center"
                              ColumnSpacing="4">
                            <Label Grid.Column="1"
                                   Text="Filtrar"
                                   FontSize="11"
                                   TextColor="#FFFFFF"
                                   FontAttributes="Bold"
                                   VerticalOptions="Center"
                                   HorizontalOptions="Center"
                                   LineBreakMode="NoWrap" />
                            <Label Grid.Column="2"
                                   Text="âŒ„"
                                   FontSize="11"
                                   TextColor="#FFFFFF"
                                   FontAttributes="Bold"
                                   VerticalOptions="Center"
                                   HorizontalOptions="End" />
                        </Grid>
                    </Border>

                </Grid>

            </Grid>
        </Border>

        <!-- Mapa -->
        <maps:Map x:Name="MapaPrincipal"
                  Grid.Row="1"
                  IsShowingUser="True"
                  MapType="Street"
                  VerticalOptions="Fill" />

        <!-- Panel de gestiÃ³n con Border -->
        <Border x:Name="PanelGestion"
               Grid.Row="1"
               BackgroundColor="White"
               Padding="15"
               Margin="20"
               HorizontalOptions="End"
               VerticalOptions="Start"
               IsVisible="False"
               WidthRequest="320"
               HeightRequest="500"
               Stroke="Transparent">

            <Border.Shadow>
                <Shadow Brush="#000000"
                        Offset="0,4"
                        Opacity="0.1"
                        Radius="8"/>
            </Border.Shadow>

            <ScrollView>
                <StackLayout Spacing="12">

                    <!-- Header del panel -->
                    <Label Text="ðŸŽ¯ GestiÃ³n de Puntos" 
                           FontSize="18" 
                           FontAttributes="Bold" 
                           TextColor="#2D3748"
                           HorizontalOptions="Center"/>

                    <!-- BÃºsqueda -->
                    <Border BackgroundColor="#F7FAFC" Padding="10" Stroke="Transparent">
                        <StackLayout>
                            <Label Text="ðŸ” Buscar puntos:" FontSize="12" TextColor="#4A5568" FontAttributes="Bold"/>
                            <Entry x:Name="TxtBusquedaGestion"
                                   Placeholder="Nombre, comuna, residuo..."
                                   TextChanged="OnBusquedaGestionChanged"/>
                        </StackLayout>
                    </Border>

                    <!-- Lista de puntos para gestiÃ³n -->
                    <CollectionView x:Name="ListaGestionPuntos"
                                    HeightRequest="220">
                        <CollectionView.EmptyView>
                            <Label Text="No hay puntos para gestionar" 
                                   HorizontalOptions="Center" 
                                   TextColor="Gray"
                                   Margin="20"/>
                        </CollectionView.EmptyView>

                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="models:PuntoReciclaje">
                                <Grid Padding="8" ColumnDefinitions="*,Auto" BackgroundColor="#F8F9FA" Margin="0,2">
                                    <StackLayout>
                                        <Label Text="{Binding Nombre}" 
                                               FontAttributes="Bold" 
                                               FontSize="14"
                                               TextColor="#2D3748"/>
                                        <Label Text="{Binding Direccion}" 
                                               FontSize="11" 
                                               TextColor="#4A5568"/>
                                        <Label Text="{Binding Comuna}" 
                                               FontSize="10" 
                                               TextColor="#718096"/>
                                    </StackLayout>

                                    <StackLayout Grid.Column="1" 
                                                 Orientation="Horizontal" 
                                                 Spacing="4"
                                                 VerticalOptions="Center">
                                        <Button Text="ðŸ—‘ï¸" 
                                                BackgroundColor="Transparent"
                                                TextColor="#E53E3E"
                                                Clicked="OnEliminarPuntoClicked"
                                                CommandParameter="{Binding .}"
                                                HeightRequest="28"
                                                WidthRequest="28"
                                                FontSize="10"/>
                                        <Button Text="âœï¸" 
                                                BackgroundColor="Transparent"
                                                TextColor="#805AD5"
                                                Clicked="OnEditarPuntoClicked"
                                                CommandParameter="{Binding .}"
                                                HeightRequest="28"
                                                WidthRequest="28"
                                                FontSize="10"/>
                                    </StackLayout>
                                </Grid>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>

                    <!-- Botones de acciÃ³n -->
                    <Grid ColumnDefinitions="*,*" ColumnSpacing="8">
                        <Button Grid.Column="0"
                                Text="âž• Agregar"
                                BackgroundColor="#38A169"
                                TextColor="White"
                                CornerRadius="8"
                                Clicked="OnAgregarPuntoClicked"
                                FontSize="12"
                                HeightRequest="36"/>

                        <Button Grid.Column="1"
                                Text="âŒ Cerrar"
                                BackgroundColor="#E53E3E"
                                TextColor="White"
                                CornerRadius="8"
                                Clicked="OnCerrarPanelClicked"
                                FontSize="12"
                                HeightRequest="36"/>
                    </Grid>

                </StackLayout>
            </ScrollView>
        </Border>

        <!-- Footer ACTUALIZADO - Con botÃ³n de filtro funcional -->
        <Border Grid.Row="2"
                BackgroundColor="#FFFFFF"
                Stroke="#E0E0E0"
                StrokeThickness="0"
                Padding="15,10"
                Margin="0">

            <Border.Shadow>
                <Shadow Brush="#000000"
                        Offset="0,-2"
                        Opacity="0.1"
                        Radius="4"/>
            </Border.Shadow>

            <Grid ColumnDefinitions="*,Auto,Auto" 
                  ColumnSpacing="12">

                <!-- âœ… NUEVO: BotÃ³n de filtro clickeable -->
                <Border Grid.Column="0"
                        BackgroundColor="Transparent"
                        StrokeThickness="0"
                        Padding="0"
                        HorizontalOptions="Start"
                        VerticalOptions="Center">
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnFiltroFooterClicked"/>
                    </Border.GestureRecognizers>

                    <Grid ColumnDefinitions="Auto,*" 
                          VerticalOptions="Center"
                          ColumnSpacing="8">
                        <Label Grid.Column="0"
                               Text="ðŸ”½"
                               FontSize="14"
                               TextColor="#7F4A9B"
                               VerticalOptions="Center" />
                        <VerticalStackLayout Grid.Column="1"
                                           VerticalOptions="Center"
                                           Spacing="3">
                            <Label x:Name="LblFiltroActual"
                                   Text="Todos los dispositivos"
                                   FontSize="12"
                                   TextColor="#7F4A9B"
                                   FontAttributes="Bold" />
                            <Label x:Name="LblInfo"
                                   Text="Cargando puntos de reciclaje..."
                                   FontSize="10"
                                   TextColor="#83AD6C" />
                        </VerticalStackLayout>
                    </Grid>
                </Border>

                <!-- BotÃ³n de gestiÃ³n CRUD -->
                <Border Grid.Column="1"
                        BackgroundColor="#7F4A9B"
                        StrokeThickness="0"
                        Padding="12,8"
                        HorizontalOptions="Center"
                        VerticalOptions="Center"
                        HeightRequest="36">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="8"/>
                    </Border.StrokeShape>
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnGestionFlotanteClicked"/>
                    </Border.GestureRecognizers>

                    <Grid ColumnDefinitions="Auto,Auto" 
                          VerticalOptions="Center"
                          ColumnSpacing="6">
                        <Label Grid.Column="0"
                               Text="âš™ï¸"
                               FontSize="12"
                               TextColor="#FFFFFF"
                               VerticalOptions="Center" />
                        <Label Grid.Column="1"
                               Text="Gestionar"
                               FontSize="11"
                               TextColor="#FFFFFF"
                               FontAttributes="Bold"
                               VerticalOptions="Center" />
                    </Grid>
                </Border>

                <!-- BotÃ³n de actualizar ubicaciÃ³n (se mantiene) -->
                <Border Grid.Column="2"
                        BackgroundColor="#7F4A9B"
                        StrokeThickness="0"
                        WidthRequest="40"
                        HeightRequest="40"
                        HorizontalOptions="Center"
                        VerticalOptions="Center">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="20"/>
                    </Border.StrokeShape>
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnActualizarUbicacionClicked"/>
                    </Border.GestureRecognizers>

                    <ImageButton
                        Source="actualizar.png"
                        WidthRequest="40"
                        HeightRequest="40"
                        Padding="10"
                        BackgroundColor="#C993E6"
                        CornerRadius="20"
                        BorderColor="White"
                        BorderWidth="2"
                        HorizontalOptions="Center"
                        VerticalOptions="Center"
                        Aspect="AspectFit" />
                </Border>

            </Grid>
        </Border>

    </Grid>
</ContentPage>